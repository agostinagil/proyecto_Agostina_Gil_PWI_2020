
<!--banner imagen rotativa-->
<section class="section-slide">
		<div class="wrap-slick1">
			<div class="slick1">
				{{#each banner}}
				<div class="item-slick1" style="background-image: url('/images/{{imagen}}');">
					<div class="container h-full">
						<div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">	
							<div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
								<h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1 color">
									TENDENCIA EN JOYAS DE PLATA
								</h2>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
								<a href="product.html" style="margin-top: 1rem;" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
									- Ver catálogo -
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="item-slick1" style="background-image: url('/images/{{imagen}}');">
					<div class="container h-full">
						<div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
							<!--<div class="layer-slick1 animated visible-false" data-appear="rollIn" data-delay="0">
								<span class="ltext-101 cl2 respon2">
									PLATA 925 - PLATA 950
								</span>
							</div>-->
								
							<div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
								<h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1 color">
									Plata 925 y Plata 950
								</h2>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="slideInUp" data-delay="1600">
								<a href="product.html" style="margin-top: 1rem;" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
									- Ver catálogo -
								</a>
							</div>
						</div>
					</div>
				</div>
				{{/each}}

			</div>
		</div>
</section>
<!-- Mensaje para cuando se genera un nuevo usuario -->
<h5 class="mtext-105 cl2 txt-center p-b-10 m-t-30 " style="color: rgb(32, 156, 156);">
	{{message}}
</h5>

<!--categorías-->
<div class="sec-banner bg0 p-t-80 p-b-50">
		<div class="container">
			<div class="row">
				{{#each categorias}}
				<div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
					<!-- Block1 -->
					<div class="block1 wrap-pic-w">
						<img src="images/{{imagen_categoria}}" alt="/{{imagen_categoria}}">

						<a href="/productos" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
							<div class="block1-txt-child1 flex-col-l">
								<span class="block1-name ltext-102 trans-04 p-b-8">
									{{nombre}}
								</span>

								<!--<span class="block1-info stext-102 trans-04">
									Spring 2018
								</span>-->
							</div>

							<div class="block1-txt-child2 p-b-4 trans-05">
								<div class="block1-link stext-101 cl0 trans-09">
									Ver catálogo
								</div>
							</div>
						</a>
					</div>
				</div>
				{{/each}}
			</div>
			<div class="row" style="justify-content: center;">
				<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
					<a href="" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">Ver más categorías </a>
				</button>
			</div>
		</div>
</div>



